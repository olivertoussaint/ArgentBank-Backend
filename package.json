{
  "name": "argent-bank-api",
  "version": "0.0.1",
  "private": true,
  "description": "Project #10 - Argent Bank",
  "keywords": [],
  "author": "",
  "license": "",
  "main": "index.js",
  "dependencies": {
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.8.2",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  },
  "scripts": {
    "dev:server": "nodemon ./server/server.js",
    "start": "node ./server/server.js",
    "populate-db": "node ./server/scripts/populateDatabase.js",
    "server": "node ./server/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:debug": "jest --runInBand --detectOpenHandles",
    "coverage": "jest --coverage && npx open-cli ./coverage/lcov-report/index.html"
  },
  "devDependencies": {
    "cobertura": "^1.0.3",
    "jest": "^30.0.5",
    "nodemon": "^3.1.7",
    "nyc": "^17.1.0",
    "supertest": "^7.1.4",
    "open-cli": "^7.0.1"
  },
  "jest": {
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "server/**/*.js",
      "!server/tests/**",
      "!server/scripts/**",
      "!server/**/index.js",
      "!server/server.js",
      "!server/controllers/accountsController.js",
      "!server/database/models/accountModel.js",
      "!server/app.js",                         
      "!server/services/transactionService.js" 
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 70,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
